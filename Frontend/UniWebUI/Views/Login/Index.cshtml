@model LoginDto
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Giriş Yap - unihelp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .user-avatar {
            width: 28px;
            height: 28px;
            border-radius: 50%;
        }

        .header-btn {
            min-width: 80px;
        }
    </style>
</head>
<body>

    <!-- ÜST MENÜ -->
    <header class="d-flex justify-content-between align-items-center px-4 py-2 border-bottom bg-white">
        <div class="d-flex align-items-center">
            <img src="~/images/logo.png" alt="logo" height="28" class="me-2" />
            <span class="fw-bold fs-5">unihelp</span>
        </div>
        <div>
            <a href="/Register" class="btn btn-warning text-white fw-bold me-2 header-btn">
                <i class="fas fa-user-plus me-1"></i> Kayıt
            </a>
            <a href="/Login" class="btn btn-outline-primary fw-bold header-btn">Giriş</a>
        </div>
    </header>

    <!-- GİRİŞ FORMU ALANI -->
    <div class="container-fluid">
        <div class="row min-vh-100">
            <!-- Sol: Giriş Formu -->
            <div class="col-lg-6 d-flex align-items-center justify-content-center bg-white p-5">
                <div style="max-width: 400px; width: 100%;">
                    <h3 class="fw-bold mb-3">Seni Özledik!</h3>
                    <p class="mb-4">150'den fazla soru sizin akıllıca önerilerinizi bekliyor!</p>

                    <form method="post" action="/Login/Index">
                        <div class="mb-3">
                            <input type="text" asp-for="Email" class="form-control" name="email" placeholder="Email">
                        </div>

                        <div class="mb-3">
                            <input type="password" class="form-control" asp-for="Password" name="password" placeholder="Password">
                            @if (ViewBag.PasswordError != null)
                            {
                                <div class="text-danger mt-1 small">Hatalı Şifre!</div>
                            }
                        </div>
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-warning text-white fw-bold">Giriş</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Sağ: Görsel -->
            <div class="col-lg-6 d-none d-lg-block p-0">
                <img src="~/images/login.png" alt="login görsel" class="img-fluid vh-100 w-100 object-fit-cover" />
            </div>
        </div>
    </div>

    <!-- Scriptler -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>