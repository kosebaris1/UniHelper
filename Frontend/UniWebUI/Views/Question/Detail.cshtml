@model GetQuestionDetailDto
@{
    Layout = "~/Views/UILayout/Index.cshtml";
    ViewData["Title"] = "Detail";
    var isAuthenticated = User.Identity != null && User.Identity.IsAuthenticated;
    var userId = isAuthenticated ? int.Parse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)!.Value) : 0;
}

@section Styles {
    <link rel="stylesheet" href="~/css/answer-card.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sorudetay.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sorular.css" asp-append-version="true" />
    <style>
        .answer-slider-container {
            max-height: 400px;
            overflow-y: auto;
            padding-right: 10px;
        }

        .answer-slider-container::-webkit-scrollbar {
            width: 6px;
        }

        .answer-slider-container::-webkit-scrollbar-thumb {
            background-color: #ccc;
            border-radius: 3px;
        }

        .answer-slider-container::-webkit-scrollbar-track {
            background: transparent;
        }
    </style>
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Sol Sidebar -->
        <div class="col-lg-2 col-md-3 d-none d-md-block sidebar-sticky sidebar-left">
            <!-- ... Sidebar içeriği aynı ... -->
        </div>

        <!-- Ana İçerik -->
        <div class="col-lg-7 col-md-9">
            <div class="card question-detail-card mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <img src="/images/user-avatar-placeholder.png" alt="User Avatar" class="rounded-circle me-2" width="30" height="30">
                        <div>
                            <span class="fw-bold">@Model.UserName</span>
                            <small class="text-muted ms-2">@Model.CreatedDate.ToString("dd MMMM yyyy HH:mm")</small>
                        </div>
                        <div class="ms-auto">
                            <a href="#" class="text-muted"><i class="fas fa-ellipsis-v"></i></a>
                        </div>
                    </div>
                    <h4 class="card-title question-title mb-3">@Model.Title</h4>
                    <p class="card-text question-content">@Model.Content</p>

                    <div class="mb-3">
                        <span class="badge bg-secondary">@Model.UniversityName</span>
                        <span class="badge bg-secondary">@Model.DepartmentName</span>
                        @foreach (var tag in Model.Tags)
                        {
                            <span class="badge bg-light text-dark me-1">@tag</span>
                        }
                    </div>

                    <div class="d-flex justify-content-end">
                        @if (isAuthenticated)
                        {
                            <button class="btn btn-outline-danger" id="likeButton">
                                <i class="fas fa-heart"></i> Beğen (<span id="likeCount">0</span>)
                            </button>

                            <input type="hidden" id="currentUserId" value="@userId" />
                            <input type="hidden" id="currentQuestionId" value="@Model.QuestionId" />
                        }
                        else
                        {
                            <a href="/Login/Index?returnUrl=/Questions/Detail/@Model.QuestionId" class="btn btn-outline-danger">
                                <i class="fas fa-heart"></i> Beğenmek için giriş yap
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Yorumlar ve Form -->
            <div class="card answer-form-card mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Cevaplar</h5>

                    <div class="answer-slider-container mb-4">
                        @await Component.InvokeAsync("_GetAnswerComponentPartial", new { questionId = Model.QuestionId, currentUserId = userId })
                    </div>

                    @if (isAuthenticated)
                    {
                        <form method="post" asp-controller="QuestionComment" asp-action="Add">
                            <input type="hidden" name="questionId" value="@Model.QuestionId" />
                            <div class="mb-3">
                                <textarea class="form-control" name="commentText" id="commentText" rows="4" placeholder="Akıllıca önerinizi buraya yazın..." required></textarea>
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="reset" class="btn btn-outline-secondary btn-sm me-2">İptal et</button>
                                <button type="submit" class="btn btn-warning btn-sm">Tavsiye</button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <p class="text-danger">Yorum yapabilmek için giriş yapmalısınız.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Sağ Profil Kartı -->
        <div class="col-lg-3 d-none d-lg-block sidebar-right">
            <!-- ... Profil Kartı içeriği aynı ... -->
        </div>
    </div>
</div>

@section Scripts {
    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(document).ready(function () {
            var userId = $("#currentUserId").val();
            var questionId = $("#currentQuestionId").val();

            $(".answer-like-button").each(function () {
                const button = $(this);
                const icon = button.find("i");
                const likeCount = parseInt(button.data("like-count"));

                if (likeCount >= 3) {
                    icon.addClass("flame");
                    button.addClass("flaming-button");
                }
            });

            // Soru beğeni sayısını al
            $.ajax({
                url: '/QuestionLike/GetLikeCount',
                type: 'GET',
                data: { questionId: questionId },
                success: function (response) {
                    $('#likeCount').text(response.LikeCount);
                }
            });

            // Soru beğen / vazgeç işlemi
            $('#likeButton').on('click', function () {
                var btn = $(this);
                var liked = btn.hasClass('btn-danger');

                $.ajax({
                    url: liked ? '/QuestionLike/UnLike' : '/QuestionLike/Like',
                    type: 'POST',
                    data: {
                        userId: userId,
                        questionId: questionId
                    },
                    success: function (response) {
                        if (response.success) {
                            if (liked) {
                                btn.removeClass('btn-danger').addClass('btn-outline-danger');
                            } else {
                                btn.removeClass('btn-outline-danger').addClass('btn-danger');
                            }

                            $.ajax({
                                url: '/QuestionLike/GetLikeCount',
                                type: 'GET',
                                data: { questionId: questionId },
                                success: function (res) {
                                    $('#likeCount').text(res.LikeCount);
                                    btn.html(`<i class="fas fa-heart"></i> ${liked ? 'Beğen' : 'Beğendin'} (<span id="likeCount">${res.LikeCount}</span>)`);
                                }
                            });
                        }
                    }
                });
            });

            // Cevap beğen / vazgeç + ANİMASYON + ALEV
            $(".answer-like-button").on("click", function () {
                const button = $(this);
                const icon = button.find("i");
                const answerId = button.data("answer-id");
                const isLiked = button.data("liked") === true || button.data("liked") === "true";
                const userId = $("#currentUserId").val();



                if (!userId) {
                    alert("Beğenmek için giriş yapmalısınız.");
                    return;
                }

                const url = isLiked ? "/AnswerLike/UnLike" : "/AnswerLike/Like";

                //ekledim
                if (!isLiked) {
                    toastr.success("Cevabı beğendin!", "👍 Başarılı");
                } else {
                    toastr.info("Beğeni geri alındı.", "🔄 Bilgi");
                }

                $.ajax({
                    url: url,
                    method: "POST",
                    data: {
                        userId: userId,
                        answerId: answerId
                    },
                    success: function (response) {
                        if (response.success) {
                            let likeCountSpan = $("#likeCount-" + answerId);
                            let count = parseInt(likeCountSpan.text());

                            // Beğeni sayısını güncellemeden önce animation ayarla
                            const flyText = $("#like-fly-" + answerId);
                            flyText.text(isLiked ? "💖 -1" : "💖 +1");
                            flyText.addClass("fly");
                            setTimeout(() => {
                                flyText.removeClass("fly");
                            }, 800);

                            // Beğeni sayısını güncelle
                            if (isLiked) {
                                count--;
                                button.removeClass("btn-danger").addClass("btn-outline-danger");
                                icon.removeClass("fas").addClass("far");
                            } else {
                                count++;
                                button.removeClass("btn-outline-danger").addClass("btn-danger");
                                icon.removeClass("far").addClass("fas");
                            }

                            likeCountSpan.text(count);
                            button.data("liked", !isLiked);

                            // Kalp animasyonu (büyüme)
                            icon.addClass("animated");
                            setTimeout(() => {
                                icon.removeClass("animated");
                            }, 600);

                            // ALEV efekti – 10+ like varsa
                            if (count >= 3) {
                                icon.addClass("flame");
                                button.addClass("flaming-button");
                            } else {
                                icon.removeClass("flame");
                                button.removeClass("flaming-button");
                            }
                        }
                    },
                    error: function () {
                        alert("Bir hata oluştu.");
                    }
                });
            });
        });
    </script>
}


