@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniHelper</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UniHelper_FrontEnd.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="/images/logo.png" alt="UniHelper Logo" height="30"
                         class="d-inline-block align-text-top me-2">UniHelper
                </a>
                @if (ViewData["Title"] as string == "Sorular")
                {
                    <span class="navbar-text ms-2 fs-5 fw-bold d-none d-lg-inline">Questions</span>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    @if (ViewData["ForceAuthenticatedNav"] as bool? == true || (User.Identity != null &&
                    User.Identity.IsAuthenticated))
                    {
                        <ul class="navbar-nav align-items-center">
                            <li class="nav-item">
                                <a class="btn btn-custom-orange me-3" asp-page="/Sorular/YeniSoru">
                                    <i class="fas fa-plus me-1"></i> Bir Soru Sor
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#" title="Bildirimler">
                                    <i class="fas fa-bell fs-5"></i>
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownUser" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="/images/user-default-avatar.png" alt="User Avatar" class="rounded-circle"
                                         height="30" width="30">
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownUser">
                                    <li><a class="dropdown-item" href="#">Profilim</a></li>
                                    <li><a class="dropdown-item" href="#">Ayarlar</a></li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><a class="dropdown-item" href="#">Çıkış Yap</a></li> {* Logout işlemi için backend
                                    entegrasyonu gerekir *}
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="btn btn-custom-orange me-2" asp-area="" asp-page="/Account/Register">Kayıt</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-light" asp-area="" asp-page="/Account/Login">Giriş</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - UniHelper_FrontEnd - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            toastr.success("@TempData["SuccessMessage"]", "✔️");
        </script>
    }


    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>





