<!-- Filtre Butonları -->
<div class="mb-4 d-flex gap-2">
    <button class="btn btn-sm btn-primary"><i class="bi bi-clock"></i> En Yeni</button>
    <button class="btn btn-sm btn-outline-secondary"><i class="bi bi-hand-thumbs-up"></i> En Çok Beğeni Alan</button>
    <button class="btn btn-sm btn-outline-secondary"><i class="bi bi-fire"></i> En Çok Etkileşim Alan</button>
    <button class="btn btn-sm btn-outline-secondary"><i class="bi bi-lock"></i> Kapanmış</button>
</div>

<!-- Soru Kartları -->
@foreach (var question in questions)
{
    <div class="card mb-3 shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex align-items-center mb-3">
                <img src="@question.UserProfileImage" class="rounded-circle me-2" width="40" height="40" />
                <div>
                    <strong>@question.UserName</strong><br />
                    <small class="text-muted">@question.PostedTimeAgo</small>
                </div>
            </div>

            <h6 class="fw-semibold mb-2">@question.Title</h6>
            <p class="mb-3">@question.Content</p>

            <div class="mb-3">
                @foreach (var tag in question.Tags)
                {
                    <span class="badge rounded-pill text-dark bg-light border me-1">@tag</span>
                }
            </div>

            <div class="d-flex justify-content-end text-muted gap-4 small">
                <span><i class="bi bi-eye"></i> @question.Views</span>
                <span><i class="bi bi-chat"></i> @question.Comments</span>
                <span><i class="bi bi-heart"></i> @question.Likes</span>
            </div>
        </div>
    </div>
}
