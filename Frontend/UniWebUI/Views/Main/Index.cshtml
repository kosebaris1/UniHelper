@{
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="container mt-5 animated-section">
    <!-- Hero -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-orange">UniHelper'a Hoş Geldin!</h1>
        <p class="lead mt-3">Üniversite tercih sürecinde yalnız değilsin. Gerçek öğrencilerle konuş, sorularını sor, doğru kararı ver.</p>
        <a href="/Question/Index" class="btn btn-warning btn-lg mt-3">Sorulara Göz At</a>
    </div>

    <!-- Hakkımızda -->
    <div class="row justify-content-center mb-5 animated-section">
        <div class="col-md-8">
            <div class="card shadow rounded-3">
                <div class="card-body">
                    <h3 class="card-title text-orange">Hakkımızda</h3>
                    <p class="card-text">
                        UniHelper, üniversite adayı öğrencilerin aklındaki soruları doğrulanmış üniversite öğrencilerine yöneltebildiği bir sosyal platformdur.
                        Hedefimiz, tercih dönemini daha bilinçli ve destekleyici bir sürece dönüştürmek. Öğrencilerden öğrencilere bir dayanışma ağı kuruyoruz.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Özellikler -->
    <div class="row text-center mb-5 animated-section">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-people-fill display-4 text-warning"></i>
                    <h5 class="mt-3">Gerçek Öğrenciler</h5>
                    <p>Doğrulanmış öğrencilerle birebir etkileşim kur.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-question-circle-fill display-4 text-warning"></i>
                    <h5 class="mt-3">Sınırsız Soru</h5>
                    <p>Üniversite, bölüm, şehir fark etmeksizin dilediğin soruyu sor.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-chat-dots-fill display-4 text-warning"></i>
                    <h5 class="mt-3">Topluluk Desteği</h5>
                    <p>Diğer adayların sorduğu sorulardan faydalan, görüş alışverişinde bulun.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Örnek Öğrenciler -->
    @await Component.InvokeAsync("_GetBest3UserComponentPartial");
</div>
