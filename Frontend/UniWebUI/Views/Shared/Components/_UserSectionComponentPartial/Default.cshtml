@model GetUserSectionDto

<div class="profile-card shadow-sm p-4 rounded-4">
    <div class="text-center mb-3">
        <div class="profile-image-wrapper mx-auto mb-2">
            <img src="@Model.ProfilePictureUrl" alt="Profil Foto" class="profile-image">
        </div>
        <h6 class="fw-bold mb-0">
            @Model.FullName
            @if (Model.IsVerified)
            {
                <i class="fas fa-circle-check text-success ms-1" title="Doğrulanmış"></i>
            }
            else
            {
                <i class="fas fa-circle-xmark text-danger ms-1" title="Doğrulanmamış"></i>
            }
        </h6>

        <div class="small text-muted">@Model.DepartmentName</div>
        <div class="small text-muted">@Model.UniversityName</div>
    </div>

    <div class="stats d-flex justify-content-around text-center my-3">
        <div>
            <div class="fw-bold fs-5 text-orange">@Model.AnswerCount</div>
            <div class="small text-muted">Cevap</div>
        </div>
        <div>
            <div class="fw-bold fs-5 text-orange">@Model.TotalLikes</div>
            <div class="small text-muted">Beğeni</div>
        </div>
    </div>
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <a href="/Question/CreateQuestion" class="btn btn-warning w-100 mt-2 rounded-pill">
            <i class="fas fa-pen"></i> Soru Sor
        </a>
    }
    else
    {
        <a href="/Login/Index" class="btn btn-warning w-100 mt-2 rounded-pill">
            <i class="fas fa-pen"></i> Soru Sormak İçin Giriş Yap
        </a>
    }
</div>