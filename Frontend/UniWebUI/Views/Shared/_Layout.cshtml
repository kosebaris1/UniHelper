@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniHelper</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UniHelper_FrontEnd.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <!-- ÜST MENÜ -->
    <header class="d-flex justify-content-between align-items-center p-3 border-bottom bg-white">
        <div class="d-flex align-items-center">
            <img src="~/images/logo.svg" alt="logo" height="28" class="me-2" />
            <span class="fw-bold fs-5">unihelp</span>
        </div>
        <div>
            <a href="/Register" class="btn btn-outline-warning me-2">Kayıt</a>
            <a href="/Login" class="btn btn-outline-primary">Giriş</a>
        </div>
    </header>

    <div class="d-flex" style="min-height: calc(100vh - 56px - 60px);">
        <!-- SOL SİDEBAR -->
        <aside class="bg-light p-3" style="width: 230px;">
            <nav>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link" href="/Questions"><i class="fas fa-question-circle me-2"></i>Sorular</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" href="/Tags"><i class="fas fa-tags me-2"></i>Etiketler</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" href="/Sort"><i class="fas fa-sort me-2"></i>Sıralama</a>
                    </li>
                    <li class="nav-item mt-3">
                        <span class="fw-bold text-muted">Kişisel Navigasyon</span>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" href="/MyQuestions"><i class="fas fa-user-edit me-2"></i>Sorularım</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" href="/MyAnswers"><i class="fas fa-reply me-2"></i>Cevaplarım</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" href="/Favorites"><i class="fas fa-heart me-2"></i>Beğendiklerim</a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- ANA İÇERİK -->
        <main class="flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-white text-center p-3" style="height: 60px;">
        © @DateTime.Now.Year Unihelp. Tüm Hakları Saklıdır.
    </footer>

    <!-- Ortak Scriptler -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
