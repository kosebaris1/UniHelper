@model GetStatisticsDto

<div class="row">

    <!-- Toplam Kullanıcı -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Toplam Kullanıcı
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalUsers</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Doğrulanmış Kullanıcı -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Doğrulanmış Kullanıcı</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.VerifiedUsers</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Onay Bekleyen Kullanıcı -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Onay Bekleyen Kullanıcı</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingUserApprovals</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-clock fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Yayınlanan Sorular -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Yayınlanan Sorular</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PublishedQuestions</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-question-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Onay Bekleyen Sorular -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-danger shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Onay Bekleyen Sorular</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingQuestions</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-hourglass-half fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toplam Cevap -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-secondary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">Toplam Cevap</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalAnswers</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-comments fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- En Beğenilen Cevap Sahibi -->
    <div class="col-xl-6 col-md-12 mb-4">
        <div class="card border-left-dark shadow h-100 py-2">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-xs font-weight-bold text-dark text-uppercase mb-1">En Beğenilen Cevap Sahibi</div>
                    <div class="h6 mb-0 font-weight-bold text-gray-800">@Model.MostLikedAnswerUser (@Model.MostLikedAnswerUserTotalLikes beğeni)</div>
                </div>
                <i class="fas fa-heart fa-2x text-danger"></i>
            </div>
        </div>
    </div>

    <!-- En Beğenilen Soru Sahibi -->
    <div class="col-xl-6 col-md-12 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">En Beğenilen Soru Sahibi</div>
                    <div class="h6 mb-0 font-weight-bold text-gray-800">@Model.MostLikedQuestionUser (@Model.MostLikedQuestionUserTotalLikes beğeni)</div>
                </div>
                <i class="fas fa-thumbs-up fa-2x text-primary"></i>
            </div>
        </div>
    </div>

</div>
